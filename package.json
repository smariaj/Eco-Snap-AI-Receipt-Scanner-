{
  "name": "eco-snap-ai-receipt-scanner",
  "version": "1.0.0",
  "description": "AI-powered receipt scanner for carbon footprint analysis",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && python app.py",
    "frontend:dev": "cd UI_Integrate && pnpm dev",
    "build": "cd UI_Integrate && pnpm build",
    "start": "cd UI_Integrate && pnpm start",
    "backend:install": "cd backend && pip install -r requirements.txt",
    "frontend:install": "cd UI_Integrate && pnpm install",
    "install:all": "npm run backend:install && npm run frontend:install",
    "test:upload": "python test_upload.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
